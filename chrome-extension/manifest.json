// manifest.json
{
  "name": "RetailSpot",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts":["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "retailspot.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": ["tabs", "activeTab"],
  "content_scripts": [{
    "js": ["content-script.js"],
    "matches": ["<all_urls>"]
  }],
  "web_accessible_resources": ["loader.js"]
}